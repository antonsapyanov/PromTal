.news-list
  .title
    margin: 0
    padding: 15px 20px
    color: #fd8a16
    /*border-bottom: 1px solid #f6f6f6*/
  .text
    padding: 0px 20px
  .datetime
    text-align: right
    padding: 5px 20px
    color: #aaaaaa
    font-size: 0.8em
  .footer
    float: left
    width: 100%
    border-top: 1px solid #eeeeee
    padding: 5px 20px
    position: relative

    .user-icon
      position: absolute
      border: 1px solid #eeeeee
      width: 30px
      height: 30px
      top: -15px
      left: 20px
    .comments, .likes
      float: right
      margin-left: 10px
      font-weight: 1.2em
      span
        margin: 0px 5px
    .likes
      color: #e7422c
    .comments
      color: #779dca