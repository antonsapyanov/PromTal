@import 'mixins'

html, body
  height: 100%
body
  font-size: 12px
  background-color:#eeeeee
header
  background: #FFFFFF
  padding: 10px 0px
  -box-shadow 0px 0px 2px 0px rgba(0,0,0,0.2)
  .logo img
    height: 30px
.frame
  background: #FFFFFF
  -border-radius(5px)
  -box-shadow 0px 1px 2px 0px rgba(0,0,0,0.1)
  margin: 5px 10px
  overflow: hidden
.login-frame, .registration-frame
  margin: 10px
  padding: 10px
  float: left
  input[type=submit]
    float: right
    margin-top: 10px
.user-icon
  width: 50px
  height: 50px
  -border-radius 999px
  background-position: center center
  background-size: cover
  background-image: url('/static/img/no-photo-s.png')
  cursor: pointer
@import 'form'