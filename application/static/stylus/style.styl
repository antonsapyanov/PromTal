@import 'mixins'
body
  background-color:#eeeeee

.error-wrapper
  display: inline-block
  width: 0
  vertical-align:top
  position: relative
  pointer-events: none
  .error
    font-size: 0.8em
    position: absolute
    white-space: nowrap
    top: 0
    right: 0
    background-color: rgba(255,0,0,0.65)
    padding: 1px 5px
    color: white
    -border-radius(0 0 0 5px)